<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Connexion - ElectroTech</title>
        <link rel="apple-touch-icon" sizes="180x180" href="{{asset("apple-touch-icon.png")}}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{asset("favicon-32x32.png")}}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{asset("favicon-16x16.png")}}">
        <link rel="manifest" href="/site.webmanifest">
        <meta name="theme-color" content="#ffffff">

        {# fontAwesome #}
        {% block fontAwesome %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endblock %}

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        {# Google Fonts #}
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Cookie&family=Roboto&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class="container mt-5">
            <a href="{{path('visitor.welcome.index')}}" class="d-flex justify-content-center mt-3"><img src="{{asset('images/logo/logo-ElectroTech.png')}}" alt="logo ElectroTech"></a>
            <form method="post">
                <div class="container col-lg-4 rounded border border-2 p-3 my-3">
                    <div class="mb-3">
                    {% if error %}
                        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="mb-3">
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <div class="mb-3 d-grid">
                        <input type="submit" class="btn btn-primary" value="Connexion" formnovalidate>
                    </div>
                    <hr>
                    <div class="mb-3 text-center">
                        <p>Nouveau chez ElectroTech ?</p>
                        <a href="{{path('visitor.registration.register')}}" class=" text-decoration-none">Inscrivez-vous</a>
                    </div>
                    <hr>
                    <div class="mt-3 text-center">
                        <a href="{{path('visitor.welcome.index')}}" class="text-decoration-none ">Retour Ã  l'accueil</a>
                    </div>
                </div>
            </form>
        </div>
    </body>
</html>

